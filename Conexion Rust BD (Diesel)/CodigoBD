//Codigo para generar: nuevo rol, usuario, contraseña y base de dato a utilizar en postgres.

//Creacion de nuevo rol(uriel)
//Se asigna un numbre del rol y contraseña
createuser -P -s -e uriel

//Creacion de la tabla
CREATE TABLE reportes(
	id INT NOT NULL GENERATED BY DEFAULT AS IDENTITY,
	tipoProblema character varying(50) NOT NULL,
	informeProblema character varying(500) NOT NULL,
	informeSolucion character varying(500) NOT NULL,
	revisado boolean NOT NULL,
	corregido boolean NOT NULL,
	fecha varchar NOT NULL
);

